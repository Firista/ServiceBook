@model Tuple<ServiceBook.Models.Users, ServiceBook.Models.VeheliceWorkshpos>
    @{
    ViewBag.Title = "RegisterWorkShop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <section class="row col-12">

        <div class="card col-5 Register-Card mx-auto">
            <h5 class="card-header Register-Card-Header">Rejestracja Warsztatu</h5>
            <div class="card-body Register-Card-Body">
                @using (Html.BeginForm("RegisterWorkShop", "Register", FormMethod.Post))
                {
                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(Tuple => Tuple.Item1.name, new { @class = "label label-default" })

                    @Html.TextBoxFor(Tuple => Tuple.Item1.name, new { @class = "form-control" })
                </div>

                <div class="list-group list-group-flush tekstNaSrodku odstepy">

                    @Html.LabelFor(Tuple => Tuple.Item1.surname, new { @class = "label label-default" })

                    @Html.TextBoxFor(Tuple => Tuple.Item1.surname, new { @class = "form-control" })
                </div>

                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(Tuple => Tuple.Item1.email, new { @class = "label label-default" })

                    @Html.TextBoxFor(Tuple => Tuple.Item1.email, new { @class = "form-control" })
                </div>

                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(Tuple => Tuple.Item1.password, new { @class = "label label-default" })

                    @Html.PasswordFor(Tuple => Tuple.Item1.password, new { @class = "form-control" })

                </div>
                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(Tuple => Tuple.Item2.workshopName, new { @class = "label label-default" })

                    @Html.TextBoxFor(Tuple => Tuple.Item2.workshopName, new { @class = "form-control" })

                </div>
                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(Tuple => Tuple.Item2.NIP, new { @class = "label label-default" })

                    @Html.TextBoxFor(Tuple => Tuple.Item2.NIP, new { @class = "form-control" })

                </div>
                <div class="list-group list-group-flush tekstNaSrodku odstepy duzeMarginesy">
                    <input type="submit" value="Zarejestruj się" class="btn btn-secondary respansywnyButton" />
                </div>
                }
            </div>
        </div>




    </section>
