@model ServiceBook.Models.VeheliceWorkshpos

@{
    ViewBag.Title = "EditWorkshop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="row col-12">

    <div class="card col-5 Register-Card mx-auto">
        <h5 class="card-header Register-Card-Header">Wprowadź nowe dane warsztatu:</h5>
        <div class="card-body Register-Card-Body">

            @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.veheliceWorkshpoId)

                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(model => model.NIP, htmlAttributes: new { @class = "label label-default" })
                    <div class="list-group list-group-flush tekstNaSrodku odstepy">
                        @Html.EditorFor(model => model.NIP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NIP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(model => model.ownerId, "ownerId", htmlAttributes: new { @class = "label label-default" })
                    <div class="list-group list-group-flush tekstNaSrodku odstepy">
                        @Html.DropDownList("ownerId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ownerId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="list-group list-group-flush tekstNaSrodku odstepy">
                    @Html.LabelFor(model => model.workshopName, htmlAttributes: new { @class = "label label-default" })
                    <div class="list-group list-group-flush tekstNaSrodku odstepy">
                        @Html.EditorFor(model => model.workshopName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.workshopName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="list-group list-group-flush tekstNaSrodku odstepy duzeMarginesy">
                    <div class="list-group list-group-flush tekstNaSrodku odstepy duzeMarginesy">
                        <input type="submit" value="Save" class="btn btn-secondary respansywnyButton" role="button" />
                    </div>
                </div>
            </div>

            }

            <div class="list-group list-group-flush tekstNaSrodku odstepy duzeMarginesy">
                <a class="btn btn-secondary respansywnyButton" role="button" href="@Url.Action(" ShowAllWorkshops", "Admin" )"><p>Anuluj</p></a>
            </div>

        </div>
    </div>

</section>